@model IEnumerable<BurgersDB.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<h1>Clients</h1>

<p>
    <a asp-action="AddNew">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
         
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsClubMemeber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsClubMemeber)
            </td>
            <td>
                @Html.ActionLink("Edit", "AddNew", new {item.CID,item.Name,item.IsClubMemeber /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.CID/* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
